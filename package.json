{
  "name": "octopus",
  "version": "0.0.1",
  "description": "![Octopus](.images/octopus.png)",
  "author": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/auth/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm run test:e2e:auth && pnpm run test:e2e:storage && pnpm run test:e2e:store",
    "test:e2e:auth": "jest --config ./apps/auth/test/jest-e2e.json --detectOpenHandles --forceExit",
    "test:e2e:storage": "jest --config ./apps/storage/test/jest-e2e.json --detectOpenHandles --forceExit",
    "test:e2e:store": "jest --config ./apps/store/test/jest-e2e.json --detectOpenHandles --forceExit",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:generate:base": "NODE_OPTIONS='--require tsconfig-paths/register' npm run typeorm -- -d ./libs/common/src/database/migration.config.ts migration:generate ./migrations/$MIGRATION_ENV_PATH/$SERVICE_MIGRATION/$SERVICE_MIGRATION || echo 'No changes detected for $SERVICE_MIGRATION, skipping...'",
    "migration:run:base": "npm run typeorm migration:run -- -d ./libs/common/src/database/migration.config.ts",
    "migration:generate:all": "pnpm run migration:generate:service auth storage store",
    "migration:run:all": "pnpm run migration:run:service auth storage store",
    "migration:generate:service": "bash -c 'for service in \"$@\"; do POSTGRES_DATABASE=${DPREFIX}$service SERVICE_MIGRATION=$service pnpm run migration:generate:base; done' _",
    "migration:run:service": "bash -c 'for service in \"$@\"; do POSTGRES_DATABASE=${DPREFIX}$service SERVICE_MIGRATION=$service pnpm run migration:run:base; done' _",
    "migration:generate:developing": "MIGRATION_ENV_PATH=developing DPREFIX= pnpm run migration:generate:all",
    "migration:run:developing": "MIGRATION_ENV_PATH=developing DPREFIX= pnpm run migration:run:all",
    "migration:generate:stage": "MIGRATION_ENV_PATH=stage DPREFIX=stage_ pnpm run migration:generate:all",
    "migration:run:stage": "MIGRATION_ENV_PATH=stage DPREFIX=stage_ pnpm run migration:run:all",
    "migration:generate:production": "MIGRATION_ENV_PATH=production DPREFIX=production_ pnpm run migration:generate:all",
    "migration:run:production": "MIGRATION_ENV_PATH=production DPREFIX=production_ pnpm run migration:run:all"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@apollo/subgraph": "^2.10.0",
    "@nestjs/apollo": "^13.0.3",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^13.0.3",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "cache-manager": "^5.5.3",
    "cache-manager-redis-store": "^3.0.1",
    "cache-manager-redis-yet": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "graphql": "^16.10.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload-minimal": "^1.5.4",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "nestjs-paginate": "^11.0.1",
    "nestjs-pino": "^4.0.0",
    "pg": "^8.11.5",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  },
  "main": ".eslintrc.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MahdadGhasemian/octopus.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MahdadGhasemian/octopus/issues"
  },
  "homepage": "https://github.com/MahdadGhasemian/octopus#readme"
}
